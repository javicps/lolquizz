<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="0dp">
        <shape>
            <gradient
                android:endColor="#1f1f1f"
                android:startColor="#1f1f1f" />

            <corners android:radius="8dp" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="3dp"
        android:right="3dp"
        android:top="1dp">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#CC6600"
                android:startColor="#FFCC00" />

            <corners android:radius="8dp" />

            <stroke
                android:width="1dp"
                android:color="#434343" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="3dp"
        android:right="4dp"
        android:top="2dp">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#00ffffff"
                android:endColor="#55000000"
                android:startColor="#40ffffff" />

            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>