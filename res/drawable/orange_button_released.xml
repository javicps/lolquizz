<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
		<item  android:left="2dp" android:right="2dp" android:top="0dp"
		android:bottom="2dp">
		<shape>
			<gradient android:startColor="#585757" android:endColor="#585757"/>
			<corners android:radius="8dp" />
		</shape>
	</item>
	<item  android:left="3dp" android:right="3dp" android:top="1dp"
		android:bottom="4dp">
		<shape>
			<gradient android:startColor="#FFCC00" android:endColor="#CC6600"
				android:angle="270" />
			<corners android:radius="8dp" />
			<stroke android:width="1dp" android:color="#434343" />
		</shape>
	</item>
	<item  android:left="3dp" android:right="4dp" android:top="2dp"
		android:bottom="4dp">
		<shape>
			<gradient android:startColor="#40ffffff" android:centerColor="#00ffffff"  android:endColor="#55000000" 
				android:angle="270" />
			<corners android:radius="8dp" />
		</shape>
	</item>
</layer-list>